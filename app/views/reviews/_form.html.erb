<%= simple_form_for @review, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

      <div class="field">
        <div class="control">
        <%= f.input :title, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Great Company" %>
        </div>
      </div>

    <div class="field">
      <div class="control">
        <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="columns">
      <div class="field column">
        <div class="control">
          <%= f.input :company, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Company" %>
        </div>
      </div>

      <div class="column">
        <output id="list"></output>
      </div>
    </div>

    <hr />

    <%= f.button :submit, class: "button is-primary is-large is-rounded mv4" %>

<% end %>
