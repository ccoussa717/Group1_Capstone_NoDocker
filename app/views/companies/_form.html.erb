<%= simple_form_for @company do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="field">
      <div class="control">
      <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Company Name" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
      <%= f.input :image_url, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Image Here" %>
      </div>
    </div>


    <%= f.button :submit, class: "button is-primary is-medium is-rounded mv4" %>

<% end %>
