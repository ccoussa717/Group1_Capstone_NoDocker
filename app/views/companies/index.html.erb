<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.image_url %></td>
        <td><%= company.user_id %></td>
        <ul class="pv3">
        <li class="pv1 f6">Admin controls: </li>
        <li class="pv1 inline-block">
          <%= link_to 'Show', company, class: 'button is-small is-link is-outlined' %>
        </li>
        <li class="pv1 inline-block">
          <%= link_to 'Edit', edit_company_path(company), class: 'button is-small is-link is-outlined' %>
        </li>
        <li class="pv1 inline-block">
          <%= link_to 'Delete', @company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-link is-outlined' %>
        </li>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

